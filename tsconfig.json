{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": false,
    "outDir": "./dist",
    "paths": {
      "@src/*": [ "./*" ]
    },
    "baseUrl": "./src"
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*.spec.ts"
  ]
}